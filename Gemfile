source 'http://rubygems.org'
ruby '2.3.1'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 5.0.0', '>= 5.0.0.1'

# Use Puma as the app server
gem 'puma', '~> 3.0'
# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.2'
# See https://github.com/rails/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

gem 'will_paginate-bootstrap'

# Use jquery as the JavaScript library
gem 'jquery-rails'

# gem 'sendgrid'

gem 'ruby_http_client'

gem 'textacular', '4.0.1'

gem 'cloudinary'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
# gem 'jbuilder', '~> 2.5'
# Use Redis adapter to run Action Cable in production
# gem 'redis', '~> 3.0'
# Use ActiveModel has_secure_password
gem 'bcrypt', '~> 3.1.7'

# This gem packages the jQuery UI assets (JavaScripts, stylesheets, and images) for the Rails asset pipeline, so you never have to download a custom package through the web interface again.
# https://github.com/joliss/jquery-ui-rails
gem 'jquery-ui-rails', '2.0.2'


# Official Sass port of Bootstrap 2 and 3. http://getbootstrap.com/css/#sass
# https://github.com/twbs/bootstrap-sass
gem 'bootstrap-sass', '3.1.1.0'

# HTML Abstraction Markup Language - A Markup Haiku http://haml.info
# https://github.com/haml/haml
gem 'haml', '4.0.7'

# gem 'mailgun_rails'

gem 'bootstrap-datepicker-rails'
# Use Capistrano for deployment
# gem 'capistrano-rails', group: :development

# react-rails makes it easy to use React and JSX in your Rails application.
# https://github.com/reactjs/react-rails
gem 'react-rails', '1.9.0'

# Mixes CommonJS `require` syntax with Sprockets `//require=`
# https://github.com/browserify-rails/browserify-rails
gem 'browserify-rails', '3.1.0'

# Sass-powered version of FontAwesome for your Ruby projects and plays nicely with Ruby on Rails, Compass, Sprockets, etc.
# https://github.com/FortAwesome/font-awesome-sass
gem 'font-awesome-sass', '4.3.2.1'


group :production do
  gem 'pg'
end

group :development, :test do
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug', platform: :mri
end

group :development do
  # Access an IRB console on exception pages or by using <%= console %> anywhere in the code.
  gem 'web-console'
  gem 'listen', '~> 3.0.5'
  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
  gem 'better_errors'
  gem 'binding_of_caller'
  # Use sqlite3 as the database for Active Record
  gem 'sqlite3'
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]
